# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2025-04-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-52

# Crawler Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_MS=1000
REQUEST_TIMEOUT_S=30
MAX_PAGES_PER_CRAWL=500

# Playwright Configuration (for cloud deployment)
# Set to "true" to run Playwright in headless mode (required for cloud/Docker)
PLAYWRIGHT_HEADLESS=true
# Optional: connect to a remote browser instance instead of launching locally
# PLAYWRIGHT_WS_ENDPOINT=ws://browserless:3000

# Output Configuration
OUTPUT_DIR=./output

# Logging
LOG_LEVEL=INFO
